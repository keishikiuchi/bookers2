<div class="container">
<div class="row">
<div class="col-lg-4">

<h1>User info</h1>

<%= form_for(@user) do |f| %>

<h4>Name</h4>
<%= f.text_area :name %>

<h4>Image</h4>
<%= f.attachment_field :profile_image %>

<h4>Introduction</h4>
<%= f.text_area :introduction %>


<p><%= f.submit "Update User" %></p>

<% end %>

</div>
</div>
</div>