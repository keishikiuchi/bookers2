<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
<div class="row">
<div class="col-lg-3">

<%= render 'books/list', book: @book %>

</div>

<div class="col-lg-9">

<h2>Books</h2>
<table class="table table-condensed">
<thead>

	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
		
	</tr>
</thead>
<tbody>
	
<% if @user.id == current_user.id %>
<% @books.each do |book| %>
<tr>
	<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'50x50' %></td>
	<td><%= link_to book.title,book_path(book.id) %></td>
	<td><%= book.body %></td>
</tr>
<% end %>

<% else %>
	<% @user.books.each do |book| %>
<tr>
	<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'50x50' %></td>
	<td><%= book.title %></td>
	<td><%= book.body %></td>
</tr>
<% end %>
<% end %>

</tbody>
</table>
</div>


</div>
</div>