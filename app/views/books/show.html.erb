<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<div class="container">
<div class="row">
	<div class="col-xs-3">

<%= render 'books/list', book: @book %>


</div>

<div class="col-xs-9">
<h1>Book detail</h1>

<table class="table table-condensed">
<tbody>
<tr>
<td><p><%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'50x50' %></p>
	<p><%= link_to @books.user.name, @books.user %></p>
</td>
<td><%= @books.title %></td>
<td><%= @books.body %></td>
<td><button type="button" class="btn btn-success">
	<% if @books.user == current_user %><%= link_to "Edit", edit_book_path(@books.id) %><% end %>
	</button></td>
<td><button type="button" class="btn btn-danger">
	<% if @books.user == current_user %><%= link_to "Destroy", book_path(@books.id), method: :delete,"data-confirm" => "Are you sure?" %><% end %>
	</button></td>
</tr>
</tbody>
</table>

</div>
</div>
</div>

