<h1>User info</h1>
<p>
<div><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
</div>
<p>
<div>Name:<%= current_user.name %></div>
</p>
<p>
<div>Introduction:<%= current_user.introduction %></div>
</p>

<% if current_user %>
<%= link_to edit_user_path(current_user) do %>
 <div class="center-block">
<div class="panel panel-default">
  <div class="panel-body"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></div>
</div>
</div>
<% end %>
<% end %>

<h1>New book</h1>
<%= form_for(book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title, :size=>"36x10" %>

	<h4>Opinion</h4>
	<%= f.text_area :body, :size=>"36" %>

	<p><%= f.submit 'Create Book', class: "btn btn-primary" %></p>

<% end %>