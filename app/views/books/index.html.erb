<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<% if @book.errors.any? %>
<h2><%= @book.errors.count %> error prohibited this obj from being saved:</h2>
<ul>
	<%= @book.errors.full_messages.each do |message| %>
</ul>
</div>
<% end %>
<% end %>

<div class="container">
<div class="row">
<div class="col-lg-3">

<%= render 'books/list', book: @book %>

</div>

<div class="col-lg-9">

<h1>Books</h1>
<table class="table table-condensed">
<thead>

	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
		
	</tr>
</thead>
<tbody>
	
	<% @books.each do |book| %>
<tr>
	<td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'50x50' %></td>
	<td><%= link_to book.title,book_path(book.id) %></td>
	<td><%= book.body %></td>
</tr>

	<% end %>

</tbody>
</table>
</div>

</div>
</div>
