<div class="container">
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

<h4>タイトル</h4>
    <%= f.text_field :title %>
<h4>本文</h4>
    <%= f.text_area :body %>

<p><%= f.submit 'Update book', class: "btn btn-primary"%></p>

<% end %>

<p><%= link_to "show",book_path(@book.id) %>/
<%= link_to "back",books_path %></p>

</div>
</div>
</div>
